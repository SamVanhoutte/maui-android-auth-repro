<SquareSelection OnSelected="@OnSelected" IsSelected="Selected">
    <MudImage Src="@ImageUrl" ObjectPosition="ObjectPosition.Center" ObjectFit="ObjectFit.ScaleDown" Style="display:block;margin-left: auto;margin-right: auto;width: 70%; margin-top: 5%"></MudImage>
    <MudText Typo="Typo.subtitle2" Align="Align.Center">@Label</MudText>
</SquareSelection>

@code {

    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public string? ImageUrl { get; set; }

    [Parameter]
    public EventCallback OnSelected { get; set; }

    [Parameter]
    public bool Selected { get; set; }

}